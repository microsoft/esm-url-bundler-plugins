{
  "name": "esm-url-plugin",
  "version": "1.0.0",
  "private": true,
  "description": "Bundler plugins for handling ?esm URL imports",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "jest",
    "test:esbuild": "jest --testPathPatterns=tests/esbuild",
    "test:webpack": "jest --testPathPatterns=tests/webpack",
    "test:rollup": "jest --testPathPatterns=tests/rollup",
    "test:vite": "jest --testPathPatterns=tests/vite",
    "test:parcel": "jest --testPathPatterns=tests/parcel",
    "test:e2e": "playwright test",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts"
  },
  "keywords": [
    "webpack",
    "rollup",
    "vite",
    "parcel",
    "plugin",
    "worker",
    "esm",
    "bundle",
    "entry-point"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-default": "^2.15.0",
    "@parcel/core": "^2.15.0",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "diff": "^8.0.3",
    "esbuild": "^0.27.2",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.0.0",
    "prettier": "^3.7.0",
    "rimraf": "^6.0.0",
    "rollup": "^4.59.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "webpack": "^5.90.0",
    "zod": "^4.3.5"
  }
}
